<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="18dp"
        android:text="设置您的收藏密码(六位数字)"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="18dp"
        android:text="输入密码"/>

    <com.example.strivezhe_chen.footballfans.utils.PasswordInputView
    android:id="@+id/setpassword"
    android:layout_width="350dp"
    android:layout_height="56dp"
    android:layout_marginTop="20dp"
    android:cursorVisible="false"
    android:inputType="number"
    android:maxLength="6"
    app:pivBorderColor="#cccccc"
    app:pivBorderRadius="10dp"
    app:pivBorderWidth="10dp"
    android:layout_gravity="center"
    app:pivPasswordColor="#cccccc"
    app:pivPasswordLength="6"
    app:pivPasswordWidth="10dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="18dp"
        android:text="确认密码"/>

    <com.example.strivezhe_chen.footballfans.utils.PasswordInputView
        android:id="@+id/setpassword2"
        android:layout_width="350dp"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:cursorVisible="false"
        android:inputType="number"
        android:maxLength="6"
        app:pivBorderColor="#cccccc"
        app:pivBorderRadius="10dp"
        app:pivBorderWidth="10dp"
        android:layout_gravity="center"
        app:pivPasswordColor="#cccccc"
        app:pivPasswordLength="6"
        app:pivPasswordWidth="10dp" />

    <Button
        android:id="@+id/setpwdbtn"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/button"
        android:paddingBottom="8dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="8dp"
        android:layout_gravity="center"
        android:text="确认密码"
        android:textColor="@color/color_drak"
        android:textSize="18sp" />

</LinearLayout>